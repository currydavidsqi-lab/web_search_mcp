{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build-tests",
    "rootDir": "./",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
